<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shamim.nstubds.Feedback">


    <android.support.v7.widget.Toolbar
        android:id="@+id/feedbooktoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradientbackground"
        app:navigationIcon="@drawable/back_icon">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/mainPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/feedbooktoolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <EditText
                android:id="@+id/feedbackdesc"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:hint="Type Your Feedback Here..."
                android:background="@drawable/border"
                />

            <Button
                android:id="@+id/sendFeedbook"
                android:text="Submit"
                android:textColor="@android:color/white"
                android:background="@drawable/button_selector"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/feedbackdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@+id/mainPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEND TO:"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/info2"
                android:layout_below="@id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="shamimice03@gmail.com"
                android:textColor="@android:color/holo_red_dark"/>

        </RelativeLayout>





    </android.support.v7.widget.CardView>

</RelativeLayout>
